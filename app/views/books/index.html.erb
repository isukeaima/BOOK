
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>
<body>
  <table>


<thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
</thead>

  <tbody>
    <% @books.each do |list| %>
      <tr>

        <td><%= list.title %></td>

        <td><%= list.body %></td>

        <td><%= link_to "Show", book_path(list) %></td>
        <td><%= link_to "Edit", edit_book_path(list) %></td>
        <td><%= link_to "Destroy", book_path(list), method: :delete %></td>

      </tr>
    <% end %>
  </tbody>





</table>
</body>

<% if @book.errors.any? %>
<div id="error_explanation">

  <h2><%= @book.errors.count %>error rohibited this book from being saved:</h2>
    <ul>
      <li>
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>

      </li>
    </ul>
  
</div>
<% end %>

<h2>New book</h2>
<div class="field">


<%= form_with model: @book,url:'books',local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
<%= f.submit 'Create Book' %>
  <% end %>

</div>

